{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard",
  "ignorePatterns": ["node_modules/", "dist/"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": "off",
    "comma-dangle": "off",
    "no-unused-vars": "warn",
    "no-undef": "warn",
    "quotes": "off",
    "semi": ["error", "always"]
  }
}
