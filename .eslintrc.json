{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "ignorePatterns": ["node_modules/", "dist/"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "root": true,
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": "off",
    "comma-dangle": "off",
    "no-unused-vars": "warn",
    "no-undef": "warn",
    "quotes": "off",
    "semi": ["error", "always"]
  }
}
